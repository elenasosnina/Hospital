<Window x:Class="Hospital.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital.Windows"
        mc:Ignorable="d"
        Title="Авторизация" Height="300" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Авторизация" Margin="100,5,90,5" FontSize="30"/>
            <TextBlock Text="Логин" Margin="30,0,30,0" FontSize="20"/>
            <TextBox Margin="30,5,30,5" FontSize="20"/>
            <TextBlock Text="Пароль" Margin="30,5,30,5" FontSize="20"/>
            <TextBox Margin="30,5,30,5" FontSize="20"/>
            <Button Content="Войти" BorderThickness="2"  BorderBrush="Gray" Background="Transparent"  FontSize="20" VerticalAlignment="Center" Width="100" Height="40" Margin="100,15,100,0" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
