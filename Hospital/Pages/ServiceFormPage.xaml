<Page x:Class="Hospital.Pages.ServiceFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hospital.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="400"
      Title="ServiceFormPage">

    <Grid>
        <StackPanel x:Name="grid">
            <Label Content="Название услуги"  Margin="15 0"/>
            <TextBox x:Name="title" Margin="15 0" />
            <Label Content="Стоимость"  Margin="15 0"/>
            <TextBox   x:Name="cost"  Margin="15 0" />
            <Label  Content="Скидка" Margin="15 0"/>
            <TextBox   x:Name="discount"  TextWrapping="Wrap" Margin="15 0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button   Content="Добавить"  Margin="20,10,15,15" FontSize="14" Click="Add_Click" />
                <Button Content="Отмена" Margin="15,10,15,15" FontSize="14" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
